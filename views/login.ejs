<%- include('template/header'); -%>

<!-- Webpage main content -->
<div class="container mb-4">
    <h3 class="text-center my-4">Login</h3>

    <div class="w-50 mx-auto">
        <% if (status!="success") { 
            if (status=="failed") { %>
                <h4 class="text-danger text-center">
                    Your login detail is invalid. Please try again.
                </h4>
            <% } %>
            <div class="row border border-secondary-subtle rounded p-3">
                <form action="/login" name="loginForm" method="post">
                    <!-- Login details -->
                    <div class="mb-2">
                        <label class="form-label" for="email">Email</label>
                        <input class="form-control" type="text" id="email" name="email">
                    </div>
                    <div class="mb-2">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password"  name="password">
                    </div>
                    
                    <!-- Buttons -->
                    <div class="row my-4 justify-content-end">
                        <button type="reset" class="btn btn-primary col-auto ">Reset</button>
                        <button type="submit" class="btn btn-success col-auto mx-2">Submit</button>
                    </div>
                </form>
                <div class="d-flex justify-content-end">
                    <a href="/register" >
                        Don't have an account? Register now!
                    </a>
                </div>
            </div>
        <% } %>
    </div>
</div>

<%- include('template/footer'); -%>